<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FinalProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor"
            tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="bottomNavigationStyle">@style/Widget.FinalProject.BottomNavigationView.Dark</item>
    </style>

    <style name="Widget.FinalProject.BottomNavigationView.Dark" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="backgroundTint">@color/design_default_color_primary</item>
        <item name="itemIconTint">@color/bottom_nav_item_color_dark</item>
        <item name="itemTextColor">@color/bottom_nav_item_color_dark</item>
    </style>

    <color name="bottom_nav_item_color_dark">
        <item name="android:state_checked">@color/teal_200</item>
        <item android:color="@color/gray_300" />
    </color>

</resources>